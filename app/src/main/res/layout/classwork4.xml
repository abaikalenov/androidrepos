<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textsan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"
        android:gravity="right"
        android:paddingRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/C"
            style="@style/func_button"
            android:text="C" />

        <Button
            android:id="@+id/plusandmin"
            style="@style/func_button"
            android:text="+/-" />

        <Button
            android:id="@+id/percent"
            style="@style/func_button"
            android:layout_width="wrap_content"
            android:text="%" />

        <Button
            android:id="@+id/btnDivision"
            style="@style/func_button"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            style="@style/number_button"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/number_button"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/number_button"
            android:text="9" />

        <Button
            android:id="@+id/btnMulti"
            style="@style/func_button"
            android:text="x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            style="@style/number_button"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/number_button"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/number_button"
            android:text="6" />

        <Button
            android:id="@+id/btnMinus"
            style="@style/func_button"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="@style/number_button"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/number_button"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/number_button"
            android:text="3" />

        <Button
            android:id="@+id/btnPlus"
            style="@style/func_button"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            style="@style/number_button"
            android:text="0" />

        <Button
            android:id="@+id/btnNukte"
            style="@style/number_button"
            android:text="." />

        <Button
            android:id="@+id/button21"
            style="@style/number_button"
            android:text="" />

        <Button
            android:id="@+id/BtnTen"
            style="@style/func_button"
            android:text="=" />

    </LinearLayout>

</LinearLayout>